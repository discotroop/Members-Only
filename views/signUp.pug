extends layout

block content
  h1 Sign Up
  p Sign up by filling out the form.

  form(method='POST' action='') 
    label First Name: 
    input(
        for='First Name'
        type='text'
        name="firstName"
    )
    br
    label Last Name: 
    input(
        for='Last Name'
        type='text'
        name="lastName"
    )
    br
    label Password: 
    input(
        for='password'
        type='text'
        name="password"
    )
    br
    label Email: 
    input(
        for='email'
        type='email'
        name="email"
    )
    br
    input(
        type='submit'
    )





